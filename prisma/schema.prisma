generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews   Review[]
  orders    Order[]
  addresses Address[]

  @@map("users")
}

model Product {
  id                String   @id @default(cuid())
  name              String
  shortDescription  String   @db.Text
  longDescription   String   @db.Text
  quantity          Int      @default(0)
  rentalPrice       Float
  purchasePrice     Float
  rentalSalePrice   Float?
  purchaseSalePrice Float?
  image             String
  additionalImages  Json     @default("[]")
  features          Json     @default("[]")
  specifications    Json     @default("{}")
  category          String
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  reviews        Review[]
  orderItems     OrderItem[]
  primaryAliases ProductAlias[] @relation("PrimaryProductAliases")
  relatedAliases ProductAlias[] @relation("RelatedProductAliases")

  @@map("products")
}

model ProductAlias {
  id               String @id @default(cuid())
  productID        String
  relatedProductID String

  product        Product @relation("PrimaryProductAliases", fields: [productID], references: [id], onDelete: Cascade)
  relatedProduct Product @relation("RelatedProductAliases", fields: [relatedProductID], references: [id], onDelete: Cascade)

  @@unique([productID, relatedProductID])
  @@index([relatedProductID])
  @@map("product_aliases")
}

model Address {
  id                String   @id @default(cuid())
  userID            String
  addressLine1      String
  addressLine2      String?
  city              String
  state             String
  postalCode        String
  country           String
  isDefaultBilling  Boolean  @default(false)
  isDefaultShipping Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user           User    @relation(fields: [userID], references: [id], onDelete: Cascade)
  billingOrders  Order[] @relation("BillingAddress")
  shippingOrders Order[] @relation("ShippingAddress")

  @@index([userID])
  @@map("addresses")
}

model Review {
  id        String   @id @default(cuid())
  userID    String
  productID String
  rating    Float
  title     String
  remarks   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userID], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productID], references: [id], onDelete: Cascade)

  @@index([userID])
  @@index([productID])
  @@map("reviews")
}

model Order {
  id                String      @id @default(cuid())
  userID            String
  billingAddressID  String
  shippingAddressID String
  totalAmount       Float
  shippingFee       Float       @default(0)
  discountFee       Float       @default(0)
  taxFee            Float       @default(0)
  status            OrderStatus @default(PENDING)
  type              OrderType
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  user            User          @relation(fields: [userID], references: [id], onDelete: Cascade)
  billingAddress  Address       @relation("BillingAddress", fields: [billingAddressID], references: [id], onDelete: Restrict)
  shippingAddress Address       @relation("ShippingAddress", fields: [shippingAddressID], references: [id], onDelete: Restrict)
  orderItems      OrderItem[]
  transactions    Transaction[]

  @@index([userID])
  @@index([billingAddressID])
  @@index([shippingAddressID])
  @@map("orders")
}

model OrderItem {
  id              String    @id @default(cuid())
  orderID         String
  productID       String
  quantity        Int
  price           Float
  type            OrderType
  rentalStartDate DateTime?
  rentalEndDate   DateTime?
  createdAt       DateTime  @default(now())

  order   Order   @relation(fields: [orderID], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productID], references: [id], onDelete: Restrict)

  @@index([orderID])
  @@index([productID])
  @@map("order_items")
}

model Transaction {
  id            String            @id @default(cuid())
  orderID       String
  amount        Float
  status        TransactionStatus @default(PENDING)
  paymentMethod PaymentMethod
  paymentInfo   Json              @default("{}")
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  order Order @relation(fields: [orderID], references: [id], onDelete: Cascade)

  @@index([orderID])
  @@map("transactions")
}

model Coupon {
  id            String       @id @default(cuid())
  code          String       @unique
  discountType  DiscountType
  discountValue Float
  minPrice      Float?
  maxPrice      Float?
  scope         CouponScope
  expiry        DateTime?
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("coupons")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum OrderType {
  RENT
  PURCHASE
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  BANK_TRANSFER
  CRYPTO
  CARD
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum CouponScope {
  ITEM
  CART
}
